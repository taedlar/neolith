{
    "version": 3,
    "configurePresets": [
        {
            "name": "project-default",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/setup.cmake"
            }
        },
        {
            "name": "windows-default",
            "hidden": true,
            "generator": "Visual Studio 16 2019",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "BISON_ROOT": "C:/GnuWin32"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Windows" ],
                    "clangTidyChecks": "llvm-include-order, -modernize-use-override",
                    "enableMicrosoftCodeAnalysis": true,
                    "enableClangTidyCodeAnalysis": true
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "msbuild-clang",
            "hidden": true,
            "toolset": {
              "value": "ClangCL",
              "strategy": "set"
            }
        },
        {
            "name": "vs16-x64",
            "displayName": "x64 - VS2019",
            "description": "Uses Visual Studio 2019 generator, x64 architecture",
            "inherits": ["project-default", "windows-default"],
            "architecture": {
              "value": "x64",
              "strategy": "set"
            }
        },
        {
            "name": "clang-x64",
            "displayName": "x64 - ClangCL",
            "description": "Uses ClangCL compiler, x64 architecture",
            "inherits": ["project-default", "windows-default", "msbuild-clang"],
            "architecture": {
              "value": "x64",
              "strategy": "set"
            }
        },
        {
            "name": "vs16-win32",
            "displayName": "Win32 - VS2019",
            "description": "Uses Visual Studio 2019 generator, Win32 architecture",
            "inherits": ["project-default", "windows-default"],
            "architecture": {
              "value": "Win32",
              "strategy": "set"
            }
        },
        {
            "name": "linux-default",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                  "hostOS": [ "Linux" ]
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux",
            "displayName": "Linux",
            "generator": "Ninja Multi-Config",
            "description": "Uses Ninja Multi-Config generator, architecture unspecified",
            "inherits": ["project-default", "linux-default"]
        }
    ],
    "buildPresets": [
        {
            "name": "dev-vs16-x64",
            "description": "Debug Build (build modified files)",
            "configurePreset": "vs16-x64",
            "configuration": "Debug",
            "targets": ["ALL_BUILD"]
        },
        {
            "name": "pr-vs16-x64",
            "description": "Pull-Request Validation Build (build modified files)",
            "inherits": ["dev-vs16-x64"],
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ci-vs16-x64",
            "description": "Continous Integration Build (rebuild all)",
            "inherits": ["pr-vs16-x64"],
            "targets": ["ALL_BUILD"],
            "cleanFirst": true
        },
        {
            "name": "dev-clang-x64",
            "description": "Debug Build (build modified files)",
            "configurePreset": "clang-x64",
            "configuration": "Debug",
            "targets": ["ALL_BUILD"]
        },
        {
            "name": "pr-clang-x64",
            "description": "Pull-Request Validation Build (build modified files)",
            "inherits": ["dev-clang-x64"],
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ci-clang-x64",
            "description": "Continous Integration Build (rebuild all)",
            "inherits": ["pr-clang-x64"],
            "targets": ["ALL_BUILD"],
            "cleanFirst": true
        },
        {
            "name": "dev-vs16-win32",
            "description": "Debug Build (build modified files)",
            "configurePreset": "vs16-win32",
            "configuration": "Debug",
            "targets": ["ALL_BUILD"]
        },
        {
            "name": "pr-vs16-win32",
            "description": "Pull-Request Validation Build (build modified files)",
            "inherits": ["dev-vs16-win32"],
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ci-vs16-win32",
            "description": "Continous Integration Build (rebuild all)",
            "inherits": ["pr-vs16-win32"],
            "targets": ["ALL_BUILD"],
            "cleanFirst": true
        },
        {
            "name": "dev-linux",
            "description": "Debug Build (build modified files)",
            "configurePreset": "linux",
            "configuration": "Debug",
            "targets": ["all"]
        },
        {
            "name": "pr-linux",
            "description": "Pull-Request Validation Build (build modified files)",
            "inherits": ["dev-linux"],
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ci-linux",
            "description": "Continous Integration Build (rebuild all)",
            "inherits": ["pr-linux"],
            "targets": ["all"],
            "cleanFirst": true
        }
    ],
    "testPresets": [
        {
            "name": "ut-windows-defaults",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "execution": {
                "noTestsAction": "ignore"
            }
        },
        {
            "name": "ut-vs16-win32",
            "displayName": "Unit Tests Win32",
            "description": "Run unit-tests for Windows 32-bits architecture",
            "configurePreset": "vs16-win32",
            "inherits": ["ut-windows-defaults"]
        },
        {
            "name": "ut-vs16-x64",
            "displayName": "Unit Tests x64",
            "description": "Run unit-tests for Windows 64-bits architecture",
            "configurePreset": "vs16-x64",
            "inherits": ["ut-windows-defaults"]
        },
        {
            "name": "ut-clang-x64",
            "displayName": "Unit Tests x64",
            "description": "Run unit-tests for Windows 64-bits architecture",
            "configurePreset": "clang-x64",
            "inherits": ["ut-windows-defaults"]
        },
        {
            "name": "ut-linux-defaults",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "execution": {
                "noTestsAction": "ignore"
            }
        },
        {
            "name": "ut-linux",
            "displayName": "Unit Tests on Linux",
            "description": "Run unit-tests on Linux",
            "configurePreset": "linux",
            "inherits": ["ut-linux-defaults"]
        }
    ]
}
